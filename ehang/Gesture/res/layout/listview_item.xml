<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:paddingBottom="10dp"
    >
    <TextView
        android:id="@+id/myitem_id"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
		android:layout_centerVertical="true"
		android:textColor="@color/black" 
		android:textSize="15sp"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp"
		android:visibility="gone"/>
    <ImageView
        android:id="@+id/myitem_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/myitem_id"
        android:src="@drawable/open_camera"
        android:layout_marginRight="20dp"
        android:paddingLeft="15dp" />
    <TextView
        android:id="@+id/myitem_action"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
		android:gravity="center"
		android:textColor="@color/hintblack" 
		android:textSize="14sp"
		android:layout_toRightOf="@+id/myitem_img"/>
   <View
       android:id="@+id/view_line"
       android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_below="@+id/myitem_img"
        android:layout_marginTop="10dp"
        /> 
</RelativeLayout>
