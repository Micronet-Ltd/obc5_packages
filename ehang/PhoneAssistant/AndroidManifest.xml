<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ehang.phoneassistant"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission xmlns:tools="http://schemas.android.com/tools" android:name="android.permission.PACKAGE_USAGE_STATS" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.FORCE_STOP_PACKAGES"/>
 	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	 <uses-permission android:name="android.permission.UPDATE_APP_OPS_STATS" />
    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />
		
    <application
		android:persistent="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_settings_power"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
			android:excludeFromRecents="true"
            android:name="com.ehang.activity.MainActivity"
            android:label="@string/app_name" 
			android:theme="@android:style/Theme.NoTitleBar">
        </activity>

        <service android:name="com.ehang.services.phoneAssistantService" >
            <intent-filter>
                <action android:name="com.ehang.services.phoneAssistantService" />
            </intent-filter>
        </service>

        <receiver android:name="com.ehang.receiver.bootComplete">
           <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
           </intent-filter>
        </receiver>
		<receiver android:name="com.ehang.receiver.appUpdate">
            <intent-filter android:priority="1000">
             <action android:name="android.intent.action.PACKAGE_ADDED" />  
             <action android:name="android.intent.action.PACKAGE_REMOVED" />  
             <data android:scheme="package" />  
            </intent-filter>
        </receiver>
    </application>

</manifest>