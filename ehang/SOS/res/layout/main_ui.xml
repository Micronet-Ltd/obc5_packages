<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <!-- numlist -->
    <LinearLayout
        android:id="@+id/numlist_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:gravity="left|center"
        android:orientation="vertical"
        android:background="@drawable/itembg"
        android:paddingTop="10dp"
        android:paddingLeft="15dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/numlist"
        	android:gravity="left|center"
            android:textColor="@color/colFont"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/numlist_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	android:minHeight="40dp"
            android:hint="@string/numlist_"
            android:textColor="@color/sumFont"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <!-- presms -->
    <LinearLayout
        android:id="@+id/premms_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="left|center"
        android:orientation="vertical"
        android:background="@drawable/itembg"
        android:paddingLeft="15dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/premms"
            android:textColor="@color/colFont"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/premms_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="@string/premms_"
            android:singleLine="true"
            android:textColor="@color/sumFont"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <!-- help -->
    <LinearLayout
        android:id="@+id/help_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="left|center"
        android:background="@drawable/itembg"
        android:paddingLeft="15dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:textColor="@color/colFont"
            android:textSize="24sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.0" />

    <!-- setup -->

    <LinearLayout
        android:id="@+id/setup_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/setup"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:background="@drawable/setupbg"
            android:text="@string/setup"
            android:textSize="28sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="35dp"
        android:text="@string/ehang"
        android:textColor="@color/sumFont"
        android:textSize="15sp" />

</LinearLayout>