                  android:layout_marginLeft="18dip"   android:gravity="left|center_vertical" android:text="@string/theme_app_name"
                  android:textSize="20sp" android:textColor="@android:color/black" />
    </LinearLayout>
    <GridView android:id="@+id/theme_install"
              android:layout_width="fill_parent" android:layout_height="0dip"
              android:paddingTop="@dimen/theme_padding_top" android:paddingLeft="6dip"
              android:paddingRight="6dip" android:horizontalSpacing="5dip"
              android:verticalSpacing="8.0dip" android:stretchMode="columnWidth"
              android:numColumns="2" android:layout_weight="1.0"
              android:layout_gravity="center_horizontal" android:gravity="center"
              android:scrollbars="none" />
