<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible">

    <View
        android:id="@+id/xAxis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <View
        android:id="@+id/yAxis"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/yAxis"
        android:layout_alignTop="@+id/baud500"
        android:text="@string/lbl_j1939"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtBaud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/yAxis"
        android:layout_below="@+id/textView"
        android:layout_marginTop="14dp"
        android:text="@string/baud_rate"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnGetBaudrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCloseCan1Interface"
        android:layout_alignBottom="@+id/btnCloseCan1Interface"
        android:layout_alignStart="@+id/yAxis"
        android:text="@string/get_baudrate"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />


    <Button
        android:id="@+id/baud250"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/_250k"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/baud500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/baud250"
        android:layout_marginTop="11dp"
        android:text="@string/_500k"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblCanSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnCloseCan1Interface"
        android:layout_marginTop="17dp"
        android:text="@string/j1939_send_interval"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/seekBarSendSpeed"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtCanSpeed"
        android:layout_toEndOf="@+id/yAxis"
        android:max="1000"
        android:maxHeight="5dip"
        android:minHeight="5dip" />

    <TextView
        android:id="@+id/txtCanSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/lblCanSpeed"
        android:layout_below="@id/txtBaud"
        android:layout_marginTop="@dimen/label_vertical_margin"
        android:layout_toEndOf="@id/seekBarSendSpeed"
        android:layout_toRightOf="@id/seekBarSendSpeed" />

    <Button
        android:id="@+id/btnSendJ1939"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/xAxis"
        android:layout_alignParentEnd="true"
        android:text="@string/transmit_can"
        android:textSize="12sp" />

    <Switch
        android:id="@+id/swCycleTransmitJ1939"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cycle_transmit"
        android:textSize="12sp"
        android:layout_alignTop="@+id/btnSendJ1939"
        android:layout_alignParentStart="true" />
    <!--
        <TextView
            android:id="@+id/txtJ1708Speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtBaud"
            android:layout_marginTop="@dimen/label_vertical_margin"
            android:layout_toRightOf="@id/seekBarSendJ1708Speed"
            android:layout_toEndOf="@id/seekBarSendJ1708Speed"
            android:layout_alignBaseline="@id/lblJ1708Speed"
            android:textColor="@android:color/black"/>-->

    <TextView
        android:id="@+id/lblInterfaceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/yAxis"
        android:text="@string/interface_status"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtJ1708InterfaceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:text="@string/closed"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/lblSocketStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/baud500"
        android:layout_alignStart="@+id/yAxis"
        android:text="@string/socket_status"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtJ1708SocketStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblSocketStatus"
        android:layout_alignBottom="@+id/lblSocketStatus"
        android:layout_alignStart="@+id/txtJ1708InterfaceStatus"
        android:text="@string/closed"
        android:textSize="12sp" />


    <Button
        android:id="@+id/btnCloseCan1Interface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/baud500"
        android:layout_marginTop="12dp"
        android:text="@string/close_interface"
        android:textSize="12sp" />


</RelativeLayout>
