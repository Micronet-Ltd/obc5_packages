<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/txtVin"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGrpPort"
        android:layout_marginStart="17dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/btnTransmissionGear"
        android:text="-"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btnRequestVin"
        android:layout_width="127dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/btnRequestEngineHours"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txtVin"
        android:background="@color/colorButtons"
        android:fontFamily="sans-serif"
        android:maxLength="30"
        android:maxLines="30"
        android:minHeight="35dp"
        android:text="Request VIN "
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btnRequestEngineHours"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/btnTransmissionGear"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnRequestVin"
        android:layout_marginTop="29dp"
        android:background="@color/colorButtons"
        android:maxLength="30"
        android:maxLines="30"
        android:minHeight="35dp"
        android:text="Request Engine Hours"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtEngineHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtVin"
        android:layout_alignTop="@+id/btnRequestEngineHours"
        android:text="-"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btnGetOdometer "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnRequestEngineHours"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnRequestEngineHours"
        android:layout_marginTop="27dp"
        android:background="@color/colorButtons"
        android:maxHeight="35dp"
        android:maxLength="30"
        android:maxLines="30"
        android:minHeight="35dp"
        android:text="Get Odometer"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtOdometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtEngineHours"
        android:layout_alignTop="@+id/btnGetOdometer "
        android:text="-"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btnTransmissionGear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnGetOdometer "
        android:layout_marginTop="30dp"
        android:background="@color/colorButtons"
        android:maxHeight="35dp"
        android:maxLength="40"
        android:minHeight="35dp"
        android:text="Get Transmission Gear"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_dark"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtTransmissionGear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/txtOdometer"
        android:layout_alignTop="@+id/btnTransmissionGear"
        android:text="-"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btnGetVehicleSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnTransmissionGear"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnTransmissionGear"
        android:layout_marginTop="22dp"
        android:background="@color/colorButtons"
        android:minHeight="35dp"
        android:text="Get Vehicle Speed "
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtVehicleSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtTransmissionGear"
        android:layout_alignTop="@+id/btnGetVehicleSpeed"
        android:text="-"
        android:textColor="@color/colorPrimary" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="25dp"
        android:id="@+id/radioGrpPort">

        <RadioButton
            android:id="@+id/radioCan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAN 1"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioCan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/radioGrpPort"
            android:text="CAN 2"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RadioGroup>

    <TextView
        android:id="@+id/txtPortNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Select a port:" />

    <TextView
        android:id="@+id/txtDestinationAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtEngineHours"
        android:text="Enter the destination address (Decimal Value): " />

    <EditText
        android:id="@+id/editTxtDestinationAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioGrpPort"
        android:layout_alignStart="@+id/txtDestinationAddress"
        android:ems="10"
        android:inputType="numberDecimal" />

</RelativeLayout>